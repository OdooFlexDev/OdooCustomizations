<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_client_checkin_form" model="ir.ui.view">
        <field name="name">salon.client_checkin.form</field>
        <field name="model">salon.client.checkin</field>
        <field name="arch" type="xml">
            <form string="Client Ckeck-In">
                <header>
                    <button name="action_confirm" string="Confirm Request" type="object" class="oe_highlight" invisible="state != 'waiting'"/>
                    <button name="SendMessage" string="Send Message" type="object" class="oe_highlight" invisible="state != 'completed'"/>
                    <button name="action_create_invoice" string="Create Invoice" type="object" class="oe_highlight" invisible="state != 'completed'"/>
                    <button name="set_to_draft" string="Set To Draft" type="object" invisible="state in ['waiting', 'invoiced']"/>
                    <button name="action_done" string="Done" type="object" class="oe_highlight" invisible="state in ['waiting','completed','invoiced']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box" invisible="state != 'invoiced'">

                        <button name="action_view_invoice" type="object" class="oe_stat_button"
                                icon="fa-pencil-square-o">
                                Invoice
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="partner_id" readonly="state == 'invoiced'"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="checkin_date"/>
                        <field name="waiting_time"/>
                        <field name="service_ids" widget="many2many_tags" readonly="state == 'invoiced'"/>
                        <field name="terms_accepted" readonly="state == 'invoiced'"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>  

    <record id="view_client_checkin_tree" model="ir.ui.view">
        <field name="name">salon.client_checkin.tree</field>
        <field name="model">salon.client.checkin</field>
        <field name="arch" type="xml">
            <tree string="Client Check-In">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="state" widget="badge"/>
                <field name="terms_accepted"/>
            </tree>
        </field>
    </record>          
