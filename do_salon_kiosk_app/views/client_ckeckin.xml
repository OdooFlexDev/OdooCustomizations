    <record id="action_client_checkin" model="ir.actions.act_window">
        <field name="name">Client Check-In</field>
        <field name="res_model">salon.client.checkin</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="kiosk_root_menu" name="Salon Kiosk" sequence="1"/>
    <menuitem id="client_ckenkin_menu" parent="kiosk_root_menu" name="CheckIn" sequence="10" action="action_client_checkin"/>
</odoo>