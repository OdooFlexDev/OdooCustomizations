<template xml:space="preserve">
<t t-name="do_salon_kiosk_app.salonaction">
    <div class="card-container" style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f4f4f4; overflow: hidden;">
        <div class="form-container" style="background-color: white; padding: 40px; border-radius: 12px; box-shadow: 0 6px 12px rgba(0,0,0,0.1); width: 100%; max-width: 450px; overflow-y: auto; max-height: 80vh;">
            <h1 style="text-align: center; font-size: 28px; margin-bottom: 30px; color: #333; font-family: 'Arial', sans-serif; font-weight: bold;">Welcome To Our Salon</h1>
            <div t-if="!state.showSuccessMessage" class="card" style="width: 100%; border: none;">

                <!-- Checkbox to toggle between existing or new user -->
                <div class="form-field" style="display: flex; align-items: center; gap: 12px; margin-bottom: 20px;">
                    <label for="check_box" style="font-size: 16px; color: #555; font-weight: 600;">Existing User</label>
                    <input type="checkbox" id="check_id" name="check_box" value="1" t-on-change.prevent="handleCheckboxChange" style="width: 20px; height: 20px;"/>
                </div>

                <!-- Form based on the existing user checkbox value -->
                <form t-on-submit.prevent="handleSubmit" class="form-container" style="display: flex; flex-direction: column; gap: 20px;">
                    <t t-if="!state.existing_user">
                        <!-- Form for new user -->
                        <div class="form-field" style="display: flex; flex-direction: column;">
                            <input type="text" id="client_name" name="client_name" t-model="formData.client_name" required="true" placeholder="Enter your name" style="padding: 12px 15px; font-size: 16px; border: 1px solid #ccc; border-radius: 8px; outline: none; transition: border-color 0.3s ease;"/>
                        </div>

                        <div class="form-field" style="display: flex; flex-direction: column;">
                            <input type="text" id="phone_number" name="phone_number" t-model="formData.phone_number" required="true" placeholder="Enter your phone number" style="padding: 12px 15px; font-size: 16px; border: 1px solid #ccc; border-radius: 8px; outline: none; transition: border-color 0.3s ease;"/>
                        </div>

                        <div class="form-field" style="display: flex; flex-direction: column;">
                            <input type="email" id="email" name="email" t-model="formData.email" placeholder="Enter your email" style="padding: 12px 15px; font-size: 16px; border: 1px solid #ccc; border-radius: 8px; outline: none; transition: border-color 0.3s ease;"/>
                        </div>
                    </t>
                    <t t-else="">
                        <!-- Form for existing user -->
                        <div class="form-field" style="display: flex; flex-direction: column; gap: 20px; max-width: 400px; margin: 0 auto; padding: 20px; background-color: #f9f9f9; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                            <label for="phone_number" style="font-size: 16px; color: #333; font-weight: bold; margin-bottom: 10px;">Phone Number:</label>
                            <div style="display: flex; flex-direction: column;">
                                <input type="text" id="phone_number" name="phone_number" placeholder="Search phone number" class="form-input" t-model="formData.phone_number" list="phone-numbers" style="padding: 12px 15px; font-size: 16px; border: 1px solid #ddd; border-radius: 8px; outline: none; width: 100%; box-sizing: border-box; transition: border-color 0.3s ease;"/>
                                <datalist id="phone-numbers">
                                    <t t-foreach="users" t-as="user" t-key="user.id">
                                        <option t-att-value="user.phone"><t t-esc="user.phone"/></option>
                                    </t>
                                </datalist>
                            </div>
                        </div>
                    </t>

                    <!-- Services section using checkboxes -->
                    <div class="form-field" style="display: flex; flex-direction: column;">
                        <label style="font-size: 16px; color: #555; font-weight: 600;">Select Services:</label>
                        <t t-foreach="services" t-as="service" t-key="service.id">
                            <div style="display: flex; align-items: center; gap: 12px; margin-bottom: 10px;">
                                <input type="checkbox" 
                                       t-att-id="'service_' + service.id" 
                                       t-att-name="'service_ids[]'" 
                                       t-att-value="service.id"
                                       t-on-change.prevent="handleServiceChange" 
                                       style="width: 20px; height: 20px;"/>
                                <label t-att-for="'service_' + service.id" style="font-size: 16px; color: #555;">
                                    <t t-esc="service.name"/> - <t t-esc="service.duration"/>min - <t t-esc="service.lst_price"/>$
                                </label>
                            </div>
                        </t>
                    </div>

                    <!-- Terms and Conditions -->
                    <div class="form-field" style="display: flex; align-items: center; gap: 12px;">
                        <input type="checkbox" id="terms" name="terms_accepted" t-model="formData.terms_accepted" required="true" style="width: 20px; height: 20px;"/>
                        <label for="terms" style="font-size: 14px; color: #555; font-weight: 500;">Agree to Terms and Conditions</label>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-field" style="display: flex; justify-content: center; margin-top: 20px;">
                        <button type="submit" style="padding: 12px 25px; font-size: 18px; background-color: #4CAF50; color: white; border: none; border-radius: 8px; cursor: pointer; transition: background-color 0.3s ease;">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
            <t t-if="state.showSuccessMessage">
                <t t-call="do_salon_kiosk_app.salon_success"/>
            </t>
        </div>
    </div>
</t>



    <t t-name="do_salon_kiosk_app.salon_success">
            <div class="success-container" style="display: flex; justify-content: center; align-items: center; height: 100vh; background-color: #f4f4f4;">
                <div class="message-box" style="background-color: white; padding: 30px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); width: 100%; max-width: 400px; text-align: center;">
                    <h1 style="font-size: 24px; color: #4CAF50;">Success!</h1>
                    <p style="font-size: 16px; color: #555; margin-top: 10px;">
                        Thank you, <t t-esc="client_name" />! Your appointment has been booked successfully.
                    </p>
                    <p style="font-size: 16px; color: #555; margin-top: 10px;">
                        Your Appointment No is
                        <t t-esc="appointment.name" />
                    </p>
                    <p style="font-size: 16px; color: #555; margin-top: 10px;">
                        Your Waiting time is
                        <t t-esc="appointment.waiting_time" />Min
                    </p>
                    <button t-on-click="restartForm" style="padding: 10px 20px; font-size: 16px; background-color: #4CAF50; color: white; border: none; border-radius: 4px; cursor: pointer; margin-top: 20px;">
                        Back to Form
                    </button>
                </div>
            </div>
        </t>
</template>
    
